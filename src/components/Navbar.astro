---
const navLinks = [ // Here is the 'master' set of links to pages!!
  { name: "About", href: "/about" },
  { name: "Projects", href: "/projects" },
  { name: "Contact", href: "/contact" },
];


---
 
<nav class="navbar flex items-center justify-between sticky frosted">
  <a href="/">
  Luke Concini
  </a>

  <div class="menu-toggle" id="menu-toggle">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <div class="nav-links justify-end">
      {navLinks.map(link => (
      <a href={link.href}>
        {link.name}
      </a>
  ))}

  <!-- Dark mode toggle button -->
  <button
    id="theme-toggle"
    aria-label="Toggle theme"
  ></button>

  <script>

    // Navbar hamburger menu
    const navbar = document.querySelector('.navbar');
    const toggle = document.getElementById('menu-toggle');

    function handleToggle() {
      if (window.innerWidth <= 700) {
        navbar!.classList.toggle('active');
      }
    }

    // Toggle when clicked (only on small screens)
    toggle!.addEventListener('click', handleToggle);

    // If window resizes larger, ensure menu closes automatically
    window.addEventListener('resize', () => {
      if (window.innerWidth > 700) {
        navbar!.classList.remove('active');
      }
    });

    // Navbar theme toggle
    (function(){
      const btn = document.getElementById('theme-toggle');
      const html = document.documentElement;
      if (!btn) return;

      function setIcon() {
        const isDark = html.classList.contains('dark');
        btn.innerHTML = isDark ?
          `<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><g transform="translate(0, 0)"><circle cx="12" cy="12" r="6"/><line x1="12" y1="2" x2="12" y2="4"/><line x1="12" y1="20" x2="12" y2="22"/><line x1="22" y1="12" x2="20" y2="12"/><line x1="4" y1="12" x2="2" y2="12"/><line x1="19.07" y1="4.93" x2="18.68" y2="5.32"/><line x1="5.32" y1="18.68" x2="4.93" y2="19.07"/><line x1="19.07" y1="19.07" x2="18.68" y2="18.68"/><line x1="5.32" y1="5.32" x2="4.93" y2="4.93"/></g></svg>` :
          `<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 36 36" fill="currentColor"><g transform="translate(0, 0)"><path d="M18.44 34.68a18.22 18.22 0 0 1-2.94-.24 18.18 18.18 0 0 1-15-20.86A18.06 18.06 0 0 1 9.59.63 2.42 2.42 0 0 1 12.2.79a1.39 2.39 0 0 1 .85 3.1L11.9 3.1l1.23.22A15.66 15.66 0 0 0 23.34 21h0a15.82 15.82 0 0 0 8.47.53 2.44 2.44 0 0 1 2.58 2.5 18.18 18.18 0 0 1-18.44 10.65ZM10.67 2.89a15.67 15.67 0 0 0-5 22.77A15.66 15.66 0 0 0 32.18 24a18.49 18.49 0 0 1-9.65-.64A18.18 18.18 0 0 1 10.67 2.89Z"/></g></svg>`;
      }

      // initialize theme toggle icon
      document.addEventListener('DOMContentLoaded', () => {
        setIcon();
      });

      btn.addEventListener('click', () => {
        html.classList.toggle('dark');
        // persist choice
        try {
          const pref = html.classList.contains('dark') ? 'dark' : 'light';
          localStorage.setItem('theme-preference', pref);
        } catch (e) {}
        setIcon();
      });
    })();
  </script>
  </div>
</nav>
