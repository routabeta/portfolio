---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro";

const { title = "Project", description = "", heroImage = "", heroAlt = "" , demoLink="", repoLink=""} = Astro.props;

const   demolabel = 'Check out a demo!';
const repolabel = 'See the source code.';
---

<html lang="en" class="fouc-prevent">

  <head>
    <script>  // Ensure no transition when page loads 
      /* theme init: apply saved preference for colour theme ASAP after loading */
      (function() {
        try{
          const k='theme-preference';
          const s=localStorage.getItem(k);
          const html=document.documentElement;
          if(s==='dark') html.classList.add('dark');
          else if(s==='light') html.classList.remove('dark');
          else if(window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) html.classList.add('dark');
        }
        catch(e){} 
      })();

      // Disable transitions before CSS and JS load
      document.documentElement.classList.add('no-transition');
      // As soon as JS runs, show html
      document.documentElement.classList.remove('fouc-prevent');

      // Re-enable transitions after page laod
      window.addEventListener('DOMContentLoaded', () => {
        requestAnimationFrame(() => {
          document.documentElement.classList.remove('no-transition');
        });
      });
    </script>
  
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Roboto&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

  </head>

  <body class="flex flex-col">
    <!-- Navbar on every page for consistency -->
    <Navbar/>

    <!-- Page content -->
    <main class="project-content">
      <div class="page-inner">

        {heroImage && (
          <div class="hero">
            <img src={heroImage} alt={heroAlt || title} />
          </div>
        )}

        <div class="project-post-interest-links">
          {demoLink.length > 0 && (
            <a
              class="btn"
              href={demoLink}
              target="_blank"
              rel="noopener noreferrer"
              onClick={(e) => e.stopPropagation()}
            >
              {demolabel}
            </a>
          )}
          {repoLink.length > 0 && (
            <a
              class="btn btn-ghost"
              href={repoLink}
              target="_blank"
              rel="noopener noreferrer"
              onClick={(e) => e.stopPropagation()}
            >
              {repolabel}
            </a>
          )}
        </div>
        

        <slot />
      </div>
    </main>

    <!-- Footer slot on every page for consistency -->
    <Footer/>
  </body>

</html>
